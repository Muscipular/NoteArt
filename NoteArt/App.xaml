<!-- Everything defined/refered here is global, which is accessible for all windows within the project, that is, Global Style & Control are put here -->
<Application x:Class="NoteArt.App" 
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
            StartupUri="View/Windows/MainWindow.xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            d1p1:Ignorable="d"
            xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <!-- StartupUri is the startup entry of whole program -->

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml"></ResourceDictionary>
                <ResourceDictionary Source="View/Controls/DragableControl.xaml"></ResourceDictionary>
                <ResourceDictionary Source="View/Controls/DragableGroupControl.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/ViewModelLocator.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/TextResource.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>