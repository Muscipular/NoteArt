<Window x:Class="NoteArt.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource DlgTitle}" Height="350" Width="525">
    <Window.DataContext>
        <Binding Source="{StaticResource Locator}" Path="Main"></Binding>
    </Window.DataContext>
    <Grid>
        <TextBox Height="32" HorizontalAlignment="Left" Margin="6,10,0,0" Name="OpenFileTextbox" VerticalAlignment="Top"
Width="300" />
        <Button Content="Browse" Height="32" HorizontalAlignment="Left" Margin="310,10,0,0"
                Name="buttonOpenFile" VerticalAlignment="Top" Width="88" Click="buttonOpenFile_Click" />
        <Button Content="{Binding Path=Title}" HorizontalAlignment="Left" Margin="155,135,0,0" VerticalAlignment="Top" Width="75" 
                Command="{Binding Close}" Grid.Column="0" Grid.Row="0">

        </Button>

    </Grid>
</Window>
